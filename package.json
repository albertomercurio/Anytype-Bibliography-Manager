{
  "name": "anytype-bibliography-manager",
  "version": "1.0.0",
  "description": "Automated bibliography management for Anytype with DOI extraction and BibTeX generation",
  "main": "dist/cli/index.js",
  "bin": {
    "anytype-bib": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/cli/index.ts",
    "start": "node dist/cli/index.js",
    "lint": "eslint src --ext .ts",
    "test": "tsx test/run-tests.ts quick",
    "test:integration": "tsx test/run-tests.ts integration",
    "test:simple": "tsx test/run-tests.ts simple",
    "test:quick": "tsx test/run-tests.ts quick"
  },
  "keywords": [
    "anytype",
    "bibliography",
    "doi",
    "bibtex",
    "research"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "chalk": "^5.3.0",
    "commander": "^14.0.1",
    "dotenv": "^17.2.2",
    "fastest-levenshtein": "^1.0.16",
    "form-data": "^4.0.0",
    "inquirer": "^12.9.6",
    "ora": "^9.0.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^9.35.0",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.3",
    "tsx": "^4.6.0",
    "typescript": "^5.9.2"
  },
  "overrides": {
    "glob": "^10.4.5",
    "inflight": "npm:@tootallnate/once@2"
  }
}
